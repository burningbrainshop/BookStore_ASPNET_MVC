@using BookStore.ViewModels;
@model ManagerLoginView

@section featured {
    <section class="featured">
        <div class="content-wrapper"></div>
    </section>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@using(Html.BeginForm())
{
    <table align="center">
        <tr>
            <td style="border-bottom:0;">&nbsp;</td>
        </tr>
        <tr>
            <td class="field-validation-error" style="border:1px solid transparent;">@ViewBag.LoginError</td>
        </tr>
        <tr>
            <td style="border-bottom:0;text-align:left;">
                <fieldset style="width:260px;padding:10px;">
                    <legend style="color:#494545;font-size:1.2em;">管理者登入</legend>
                    帳號：@Html.TextBoxFor(model => model.Account, new { @class = "singleTextBox" })
                    <span style="margin-left:40px;display:inline;white-space:nowrap;">@Html.ValidationMessageFor(model => model.Account)</span><br />
                    密碼：@Html.PasswordFor(model => model.Password, new { @class = "singleTextBox" })
                    <span style="margin-left:40px;display:inline;white-space:nowrap;">@Html.ValidationMessageFor(model => model.Password)</span><br />
                </fieldset>
            </td>
        </tr>
        <tr>
            <td style="border-bottom:0;">
                <input type="submit" value="登入" />
            </td>
        </tr>
        <tr>
            <td style="color:darkred;"><br /><br />(測試帳號 : Admin / 測試密碼 : admin999)</td>
        </tr>
        <tr>
            <td style="border:0;">到 @Html.ActionLink("網路書局", "Index", "BookProduct") 首頁</td>
        </tr>
    </table>
}
